/* 第二个 */
.container1 {
  background: #254a89;
  width: 100%;
  height: 100%;
  position: relative;
}
.container1 .voice {
  width: 25px;
  height: 25px;
  position: absolute;
  top: 10px;  
  right: 15px;
  border: 1px solid #d1dceb;
  padding: 5px;
  border-radius: 50%;
}
.container1 .circle {
  width: 230px;
  height: 230px;
  border-radius: 50%;
  border: 1px solid #ffffff;
  /* position: relative; */
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -30%);
  animation:moveCircle 2.5s linear infinite;
  animation-play-state: running;
  z-index: 1;
}
@keyframes moveCircle {
  0%{
    width: 230px;
    height: 230px;
    border: 1px solid rgba(255, 255, 255, 1)
  }
  30%{
    width: 240px;
    height: 240px;
    border: 1px solid rgba(255, 255, 255, 0.8)
  }
  50%{
    width: 250px;
    height: 250px;
    border: 1px solid rgba(255, 255, 255, 0.6)
  }
  80%{
    width: 270px;
    height: 270px;
    border: 1px solid rgba(255, 255, 255, 0.4)
  }
  99%{
    width: 280px;
    height: 280px;
    border: 1px solid rgba(255, 255, 255, 0.1)
  }
  100%{
    width: 230px;
    height: 230px;
    border: 1px solid rgba(255, 255, 255, 0)
  }
}
